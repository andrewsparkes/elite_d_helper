<%= form_for @commodity_type do |f| %>
  <% if @commodity_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@commodity_type.errors.count, "error") %> prevented this commodity type from being saved:</h2>
      <ul>
      <% @commodity_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name, class: "control-label" %>&nbsp;<%= f.text_field :name, class: "control-label" %>&nbsp;<%= f.text_field :name, class: "form-control typeahead edsUpdate tt-input", placeholder: "enter text here", required: "required", style: "display: inline-block; position: relative; vertical-align: top; background-color: transparent;", value: "" %>
  </p>

  <p>
    <%= f.label :order_num, class: "control-label" %>&nbsp;<%= f.number_field :order_num, class: "form-control typeahead edsUpdate tt-input", placeholder: "1", required: "required", style: "display: inline-block; position: relative; vertical-align: top; background-color: transparent;", value: "" %>
  </p>

  <p>
    <%= f.submit "Save", class: "btn btn-default" %>
  </p>
<% end %>