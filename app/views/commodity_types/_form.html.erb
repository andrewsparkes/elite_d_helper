<%= form_for @commodity_type do |f| %>
  <% if @commodity_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@commodity_type.errors.count, "error") %> prevented this commodity type from being saved:</h2>
      <ul>
      <% @commodity_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <body>
      <tr>
        <td><%= f.label :name, class: "control-label" %></td>
        <td>&nbsp;&nbsp;&nbsp;</td>
        <td><%= f.text_field :name, class: "form-control typeahead tt-input", placeholder: "enter name here", required: "required", style: "display: inline-block; position: relative; vertical-align: top; background-color: transparent;" %></td>
      </tr>
      <tr>
        <td><%= f.label :order_num, class: "control-label" %></td>
        <td>&nbsp;&nbsp;&nbsp;</td>
        <td><%= f.number_field :order_num, class: "form-control typeahead tt-input", placeholder: "1", required: "required", style: "display: inline-block; position: relative; vertical-align: top; background-color: transparent;" %></td>
      </tr>
      <tr>
        <td colspan="3"><%= f.submit "Save", class: "btn btn-default" %></td>
      </tr>
    </body>
  </table>
<% end %>