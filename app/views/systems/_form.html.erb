<%= form_for @system do |f| %>
  <% if @system.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@system.errors.count, "error") %> prevented this system from being saved:</h2>
    <ul>
    <% @system.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label :allegiances, class: "control-label" %>&nbsp;<%= f.collection_select :allegiance_id, Allegiance.all.order(:name), :id, :name, :prompt => "Select an allegiance" %>
  </p>

  <p>
    <%= f.label :governments, class: "control-label" %>&nbsp;<%= f.collection_select :government_id, Government.all.order(:name), :id, :name, :prompt => "Select a government" %>
  </p>

  <p>
    <%= f.label :name, class: "control-label" %>&nbsp;<%= f.text_field :name, class: "form-control typeahead edsUpdate tt-input", required: "required", style: "display: inline-block; position: relative; vertical-align: top; background-color: transparent;" %>
  </p>

  <p>
    <%= f.submit "Save", class: "btn btn-default" %>
  </p>
<% end %>