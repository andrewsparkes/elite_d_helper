<h1>Listing of All Systems</h1>

<table border="1">
  <body>
    <tr>
      <th>System Name</th>
      <th>Allegiance</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>

    <% @systems.order(:name).each do |system| %>
      <tr>
        <td><b><%= system.name %></b></td>
        <td><%= system.allegiance.name %></td>
        <td><%= link_to 'Show', system_path(system) %></td>
        <td><%= link_to 'Edit', edit_system_path(system) %></td>
        <td><%= link_to 'Destroy', system_path(system),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </body>
</table>
<br>
<%= link_to 'Add a new System', new_system_path %>
