<%= form_for @commodity do |f| %>
  <% if @commodity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@commodity.errors.count, "error") %> prevented this commodity from being saved:</h2>
      <ul>
      <% @commodity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :commodity_types %><%= f.collection_select :commodity_type_id, CommodityType.all.order(:order_num), :id, :name, :prompt => "Select a commodity type" %>
  </p>

  <p>
    <%= f.label :name %>&nbsp;<%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :galactic_average_price %>&nbsp;<%= f.text_field :galactic_average_price %> cr
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>