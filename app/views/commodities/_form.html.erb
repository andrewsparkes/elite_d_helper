<%= form_for @commodity do |f| %>
  <% if @commodity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@commodity.errors.count, "error") %> prevented this commodity from being saved:</h2>
      <ul>
      <% @commodity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <body>
      <tr>
        <td><%= f.label :commodity_types, class: "control-label" %></td>
        <td colspan="2"><%= f.collection_select :commodity_type_id, CommodityType.all.order(:order_num), :id, :name, :prompt => "Select a commodity type" %></td>
      </tr>
      <tr>
        <td><%= f.label :name, class: "control-label" %></td>
        <td colspan="2"><%= f.text_field :name, class: "form-control typeahead edsUpdate tt-input", placeholder: "enter name here", required: "required", style: "display: inline-block; position: relative; vertical-align: top; background-color: transparent;", value: "" %></td>
      </tr>
      <tr>
        <td><%= f.label :galactic_average_price, class: "control-label" %></td>
        <td><%= f.number_field :galactic_average_price, class: "form-control typeahead edsUpdate tt-input", placeholder: "1", required: "required", style: "display: inline-block; position: relative; vertical-align: top; background-color: transparent;", value: "" %></td>
        <td>&nbsp;cr</td>
      </tr>
      <tr>
        <td colspan="3"><%= f.submit "Save", class: "btn btn-default" %></td>
      </tr>
    </body>
  </table>
<% end %>