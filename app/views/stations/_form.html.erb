      </tr>
      <tr>
        <td>Is Economy Hi Tech?</td>
        <td><%= f.radio_button :is_economy_hi_tech, true %><label for="station_is_economy_hi_tech_true">&nbsp;yes</label></td>
        <td>&nbsp;</td>
        <td><%= f.radio_button :is_economy_hi_tech, false %><label for="station_is_economy_hi_tech_false">&nbsp;no</label></td>
      </tr>
      <tr>
        <td>Is Economy Industrial?</td>
        <td><%= f.radio_button :is_economy_industrial, true %><label for="station_is_economy_industrial_true">&nbsp;yes</label></td>
        <td>&nbsp;</td>
