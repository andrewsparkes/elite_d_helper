    <%= f.radio_button :has_blackmarket, false %><label for="station_has_blackmarket_false">no</label></td>
      </tr>
      <tr>
        <td>Is Economy Agricultural?</td>
        <td><%= f.radio_button :is_economy_agricultural, true %><label for="station_is_economy_agricultural_true">yes</label>
    <%= f.radio_button :is_economy_agricultural, false %><label for="station_is_economy_agricultural_false">no</label></td>
