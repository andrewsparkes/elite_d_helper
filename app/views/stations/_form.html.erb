        <td><%= f.radio_button :is_economy_military, true %><label for="station_is_economy_military_true">&nbsp;yes</label></td>
        <td>&nbsp;</td>
        <td><%= f.radio_button :is_economy_military, false %><label for="station_is_economy_military_false">&nbsp;no</label></td>
      </tr>
      <tr>
        <td>Is Economy None?</td>
        <td><%= f.radio_button :is_economy_none, true %><label for="station_is_economy_none_true">&nbsp;yes</label></td>
        <td>&nbsp;</td>
        <td><%= f.radio_button :is_economy_none, false %><label for="station_is_economy_none_false">&nbsp;no</label></td>
      </tr>
