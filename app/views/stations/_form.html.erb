      </tr>
      <tr>
        <td>Is Economy Refinery?</td>
        <td><%= f.radio_button :is_economy_refinery, true %><label for="station_is_economy_refinery_true">yes</label>
    <%= f.radio_button :is_economy_refinery, false %><label for="station_is_economy_refinery_false">no</label></td>
      </tr>
      <tr>
        <td>Is Economy Service?</td>
        <td><%= f.radio_button :is_economy_service, true %><label for="station_is_economy_service_true">yes</label>
    <%= f.radio_button :is_economy_service, false %><label for="station_is_economy_service_false">no</label></td>
      </tr>
      <tr>
        <td>Is Economy Terraforming?</td>
        <td><%= f.radio_button :is_economy_terraforming, true %><label for="station_is_economy_terraforming_true">yes</label>
