<%= form_for @station do |f| %>
  <% if @station.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@station.errors.count, "error") %> prevented this station from being saved:</h2>
      <ul>
      <% @station.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <body>
      <tr>
        <td><%= f.label :systems %></td>
        <td><%= f.collection_select :system_id, System.all.order(:name), :id, :name, :prompt => "Select a system" %></td>
      </tr>
      <tr>
        <td><%= f.label :station_types %></td>
        <td><%= f.collection_select :station_type_id, StationType.all.order(:name), :id, :name, :prompt => "Select a station type" %></td>
      </tr>
      <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :nav_ls %></td>
        <td><%= f.text_field :nav_ls %>ls</td>
      </tr>
      <tr>
        <td><%= f.label :allegiances %></td>
        <td><%= f.collection_select :allegiance_id, Allegiance.all.order(:name), :id, :name, :prompt => "Select a allegiance" %></td>
      </tr>
      <tr>
        <td><%= f.label :governments %></td>
        <td><%= f.collection_select :government_id, Government.all.order(:name), :id, :name, :prompt => "Select a government" %></td>
      </tr>
      <tr>
        <td><%= f.label :population_levels %></td>
        <td><%= f.collection_select :population_level_id, PopulationLevel.all.order(:name), :id, :name, :prompt => "Select a population level" %></td>
      </tr>
      <tr>
        <td>Has Commodities?</td>
        <td><%= f.radio_button :has_commodities, true %><label for="station_has_commodities_true">yes</label>
    <%= f.radio_button :has_commodities, false %><label for="station_has_commodities_false">no</label></td>
      </tr>
      <tr>
        <td>Has Refueling?</td>
        <td><%= f.radio_button :has_refuel, true %><label for="station_has_refuel_true">yes</label>
    <%= f.radio_button :has_refuel, false %><label for="station_has_refuel_false">no</label></td>
      </tr>
      <tr>
        <td>Has Repairing?</td>
        <td><%= f.radio_button :has_repair, true %><label for="station_has_repair_true">yes</label>
    <%= f.radio_button :has_repair, false %><label for="station_has_repair_false">no</label></td>
      </tr>
      <tr>
        <td>Has Re-Arming?</td>
        <td><%= f.radio_button :has_re_arm, true %><label for="station_has_re_arm_true">yes</label>
    <%= f.radio_button :has_re_arm, false %><label for="station_has_re_arm_false">no</label></td>
      </tr>
      <tr>
        <td>Has Outfitting?</td>
        <td><%= f.radio_button :has_outfitting, true %><label for="station_has_outfitting_true">yes</label>
    <%= f.radio_button :has_outfitting, false %><label for="station_has_outfitting_false">no</label></td>
      </tr>
      <tr>
        <td>Has a Shipyard?</td>
        <td><%= f.radio_button :has_shipyard, true %><label for="station_has_shipyard_true">yes</label>
    <%= f.radio_button :has_shipyard, false %><label for="station_has_shipyard_false">no</label></td>
      </tr>
      <tr>
