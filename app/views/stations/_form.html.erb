        <td><%= f.radio_button :is_economy_refinery, true %><label for="station_is_economy_refinery_true">&nbsp;yes</label></td>
        <td>&nbsp;</td>
        <td><%= f.radio_button :is_economy_refinery, false %><label for="station_is_economy_refinery_false">&nbsp;no</label></td>
      </tr>
      <tr>
        <td>Is Economy Service?</td>
        <td><%= f.radio_button :is_economy_service, true %><label for="station_is_economy_service_true">&nbsp;yes</label></td>
        <td>&nbsp;</td>
        <td><%= f.radio_button :is_economy_service, false %><label for="station_is_economy_service_false">&nbsp;no</label></td>
      </tr>
      <tr>
        <td>Is Economy Terraforming?</td>
        <td><%= f.radio_button :is_economy_terraforming, true %><label for="station_is_economy_terraforming_true">&nbsp;yes</label></td>
        <td>&nbsp;</td>
        <td><%= f.radio_button :is_economy_terraforming, false %><label for="station_is_economy_terraforming_false">&nbsp;no</label></td>
      </tr>
      <tr>
        <td>Is Economy Tourism?</td>
        <td><%= f.radio_button :is_economy_tourism, true %><label for="station_is_economy_tourism_true">&nbsp;yes</label></td>
        <td>&nbsp;</td>
        <td><%= f.radio_button :is_economy_tourism, false %><label for="station_is_economy_tourism_false">&nbsp;no</label></td>
      </tr>
    </body>
  </table>

  <p>
    <%= f.submit "Save", class: "btn btn-default" %>
  </p>
<% end %>