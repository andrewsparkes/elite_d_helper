      </tr>
      <tr>
        <td>Is Economy Tourism?</td>
        <td><%= f.radio_button :is_economy_tourism, true %><label for="station_is_economy_tourism_true">yes</label>
    <%= f.radio_button :is_economy_tourism, false %><label for="station_is_economy_tourism_false">no</label></td>
      </tr>
    </body>
  </table>

  <p>
    <%= f.submit %>
  </p>
<% end %>